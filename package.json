    "lint": "biome check --formatter-enabled=false .",
    "lint:fix": "biome check --formatter-enabled=false --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "clean": "rm -rf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antooni/blockchain-homework-assignment.git"
  },
