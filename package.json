  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/node": "^25.0.8",
    "@types/pg": "^8.16.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "fs": "^0.0.1-security",
